{% extends "PayumBundle::layout.html.twig" %}

{% block payum_content %}
    {% if status.success %}
        Payment succesfully finished!
    {% elseif status.canceled %}
        Payment was canceled!
    {% elseif status.failed %}
        Payment failed!
    {% elseif status.pending %}
        Payment still in progress!
    {% elseif status.pending %}
        Payment status unknown!
    {% endif %}
{% endblock payum_content %}